<h1>Lista de propostas</h1>

<table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Valor</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Cidade</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @propostas.each do |proposta| %>
      <tr>
        <td><%= proposta.nome %></td>
        <td><%= proposta.descricao %></td>
        <td><%= number_to_currency(proposta.valor) %></td>
        <td><%= proposta.inicio.strftime('%d/%m/%Y') %></td>
        <td><%= proposta.fim.strftime('%d/%m/%Y') %></td>
        <td><%= proposta.cidade %></td>
        <td><%= link_to 'Exibir', proposta, class: 'btn btn-sm btn-success' %>
        <%= link_to 'Editar', edit_proposta_path(proposta), class: 'btn btn-sm btn-warning' %>
        <%= link_to 'Excluir', proposta, class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Proposta', new_proposta_path, class: 'btn btn-success btn-block btn-lg' %>
