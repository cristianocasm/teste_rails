<h1>Lista de propostas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descricao</th>
      <th>Valor</th>
      <th>Inicio</th>
      <th>Fim</th>
      <th>Cidade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @propostas.each do |proposta| %>
      <tr>
        <td><%= proposta.nome %></td>
        <td><%= proposta.descricao %></td>
        <td><%= proposta.valor %></td>
        <td><%= proposta.inicio %></td>
        <td><%= proposta.fim %></td>
        <td><%= proposta.cidade %></td>
        <td><%= link_to 'Show', proposta %></td>
        <td><%= link_to 'Edit', edit_proposta_path(proposta) %></td>
        <td><%= link_to 'Destroy', proposta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Proposta', new_proposta_path %>
